<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.qdc.lims.ui.controller.PanelManagementController">
    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Panel Management" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="New Panel" onAction="#handleNewPanel"/>
                <Button text="Save Panel" onAction="#handleSavePanel"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="Delete Panel" onAction="#handleDeletePanel"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                <Button text="Refresh" onAction="#handleRefresh"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Close" onAction="#handleClose" styleClass="admin-close-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.44">
            <items>
                <VBox spacing="8" style="-fx-padding: 0 20 20 20;">
                    <Label text="Existing Panels" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                    <TableView fx:id="panelTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colPanelName" text="Panel Name" prefWidth="170">
                                <cellValueFactory><PropertyValueFactory property="panelName"/></cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colDepartment" text="Department" prefWidth="120"/>
                            <TableColumn fx:id="colPrice" text="Price" prefWidth="80">
                                <cellValueFactory><PropertyValueFactory property="price"/></cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colActive" text="Active" prefWidth="65"/>
                            <TableColumn fx:id="colTestCount" text="Tests" prefWidth="60"/>
                        </columns>
                    </TableView>
                </VBox>

                <VBox spacing="10" style="-fx-padding: 0 20 20 0;">
                    <Label text="Panel Details" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                    <GridPane hgap="10" vgap="10">
                        <Label text="Panel Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="panelNameField" promptText="e.g. CBC / Blood CP"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Department:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="departmentCombo" promptText="Select department"
                                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Panel Price:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="panelPriceField" promptText="e.g. 650"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Active:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <CheckBox fx:id="activeCheckBox" text="Show in Create Order"
                                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>

                    <Separator/>

                    <Label text="Map Tests To Panel" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <TextField fx:id="testSearchField" promptText="Search tests by name, code, or category"
                                   HBox.hgrow="ALWAYS"/>
                        <Button text="Select All" onAction="#handleSelectAllTests"/>
                        <Button text="Clear" onAction="#handleClearTestSelection"/>
                    </HBox>
                    <Label text="Available tests are filtered by selected department."
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 11;"/>
                    <ListView fx:id="availableTestsListView" VBox.vgrow="ALWAYS"/>
                    <Label fx:id="selectedTestsLabel" text="Selected tests: 0"
                           style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 12 20 16 20;">
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
</BorderPane>
